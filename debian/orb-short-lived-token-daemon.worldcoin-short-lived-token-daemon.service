[Unit]
Description=Short lived token daemon
## persistent contains SE pairing keys
After=usr-persistent.mount

[Service]
Type=simple
Environment=DBUS_SESSION_BUS_ADDRESS=unix:path=/tmp/worldcoin_bus_socket
SyslogIdentifier=orb-short-lived-token-daemon
Restart=on-failure
ExecStart=/bin/bash -c 'ORB_ID=$(/usr/local/bin/orb-id) /usr/bin/orb-short-lived-token-daemon'

[Install]
WantedBy=multi-user.target
